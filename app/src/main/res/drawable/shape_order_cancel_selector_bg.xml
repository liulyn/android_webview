<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="#F84241" />
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="2dip" />

        </shape>
    </item>


    <!-- 主体背景颜色值 -->
    <item android:bottom="0.8dp" android:right="0.8dp" android:left="0.8dp" android:top="0.8dp">
        <shape>
            <!-- 填充的颜色 -->
            <solid android:color="#E2E2E2" />
            <!-- 设置按钮的四个角为弧形 -->


            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding
                android:left="3dp"
                android:top="1dp"
                android:right="3dp"
                android:bottom="1dp"
                />
        </shape>
    </item>
</layer-list>

