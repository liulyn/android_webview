<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_upgrade_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_upgrade_top"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="发现新版本"
            android:textColor="@color/nag_bg"
            android:textSize="@dimen/f18" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/nag_bg" />

        <TextView
            android:id="@+id/tv_upgrade_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            android:paddingBottom="12dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="12dp"
            android:textColor="@color/text_gray_01"
            android:textSize="@dimen/f14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/item_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_upgrade_from_browser"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/selector_upgrade_center_bt"
            android:clickable="true"
            android:gravity="center"
            android:text="浏览器下载"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/f14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/item_line" />

        <!--<TextView-->
            <!--android:id="@+id/tv_upgrade_confirmg"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="46dp"-->
            <!--android:background="@drawable/selector_upgrade_bottom_bt"-->
            <!--android:clickable="true"-->
            <!--android:gravity="center"-->
            <!--android:text="本地更新"-->
            <!--android:textColor="@color/text_gray"-->
            <!--android:textSize="@dimen/f14" />-->

    </LinearLayout>

</LinearLayout>