<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/h_12"
    android:background="@color/color_white_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="@dimen/w_6">

        <RelativeLayout
            android:id="@+id/rl_fenxiao_order_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_fenxiao_order_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/f14" />

            <TextView
                android:id="@+id/tv_fenxiao_order_parent_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/f14" />

            <TextView
                android:id="@+id/tv_fenxiao_order_parent_order_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_fenxiao_order_parent_order"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/f14" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/rl_fenxiao_order_title"
            android:layout_marginTop="@dimen/h_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_fenxiao_order_total_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/red_bg"
                android:textSize="@dimen/f14" />

            <TextView
                android:id="@+id/tv_fenxiao_order_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/f14" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/item_line" />

    <com.cloud.tao.ui.widget.WrapContentListView
        android:id="@+id/lv_fenxiao_order_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/item_line"
        android:dividerHeight="0.4dp"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="true"
        android:listSelector="@android:color/white" />

    <RelativeLayout
        android:padding="@dimen/h_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_fenxiao_order_fenxiao_levle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/f14" />

        <TextView
            android:id="@+id/tv_fenxiao_order_fenxiao_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/f14" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_0.5"
        android:background="@color/item_line_cover" />

</LinearLayout>