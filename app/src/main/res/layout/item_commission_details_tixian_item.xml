<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/h_12"
    android:background="@color/color_white_bg"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:padding="@dimen/w_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tv_commission_details_tixian_create_date"
            android:layout_marginLeft="@dimen/w_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/f14" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/item_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/w_12"
            android:paddingRight="@dimen/w_12"
            android:paddingTop="@dimen/w_6"
            android:paddingBottom="@dimen/w_6"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_commission_details_tixian_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/f14" />

                <TextView
                    android:id="@+id/tv_commission_details_tixian_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/red_bg"
                    android:textStyle="bold"
                    android:textSize="@dimen/f14" />
            </RelativeLayout>
            <RelativeLayout
                android:paddingTop="@dimen/w_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_commission_details_tixian_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/text_gray_01"
                    android:textSize="@dimen/f14" />

                <TextView
                    android:id="@+id/tv_commission_details_tixian_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/red_bg"
                    android:textSize="@dimen/f14" />
            </RelativeLayout>
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_0.5"
        android:background="@color/item_line_cover"/>

</LinearLayout>