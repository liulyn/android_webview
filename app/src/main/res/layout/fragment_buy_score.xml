<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:background="@color/gray_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_0.5"/>

    <RelativeLayout
        android:background="@color/gary_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <View
                    android:background="@color/gray_line"
                    android:layout_marginTop="@dimen/h_10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_0.5"/>


                <RelativeLayout
                    android:paddingLeft="@dimen/w_10"
                    android:paddingRight="@dimen/w_10"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="@dimen/h_50">
                    <TextView
                        android:id="@+id/tv_score"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#8F8F8F"
                        style="@style/personInfoText"
                        android:text="库存云豆：2134"
                        />

                </RelativeLayout>

                <View
                    android:background="@color/gray_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_0.5"/>


                <View
                    android:layout_marginTop="@dimen/h_10"
                    android:background="@color/gray_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_0.5"/>

                <RelativeLayout
                    android:id="@+id/rl_cash_way"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/w_10"
                    android:paddingRight="@dimen/w_10"

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_50">
                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/personInfoText"
                        android:text="购买云豆："
                        />
                    <EditText
                        android:id="@+id/et_buy_score"
                        android:layout_marginLeft="@dimen/w_5"
                        android:textColorHint="#EAEAEA"
                        style="@style/personInfoEdit"
                        android:layout_toRightOf="@+id/tv_phone"
                        android:layout_centerVertical="true"
                        android:hint="1元=23云豆  最低1元"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>

                <View
                    android:background="@color/gray_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_0.5"/>


                <RelativeLayout
                    android:id="@+id/rl_city"
                    android:paddingLeft="@dimen/w_10"
                    android:paddingRight="@dimen/w_10"
                    android:layout_width="match_parent"
                    android:background="@color/white"

                    android:layout_height="@dimen/h_50">
                    <TextView
                        android:id="@+id/tv_city"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/personInfoText"
                        android:text="账户余额："
                        />
                    <TextView
                        android:id="@+id/tv_balance"
                        android:layout_toRightOf="@id/tv_city"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/w_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red_gift_num"
                        android:text="￥22.6"
                        />

                </RelativeLayout>

                <View
                    android:background="@color/gray_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_0.5"/>

                <RelativeLayout
                    android:paddingLeft="@dimen/w_10"
                    android:paddingRight="@dimen/w_10"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_gravity="left"
                    android:layout_height="@dimen/h_50">
                    <TextView
                        android:id="@+id/tv_street"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/personInfoText"
                        android:text="备注："
                        />

                    <EditText
                        android:id="@+id/et_to_rmark"
                        android:layout_marginLeft="@dimen/w_5"
                        android:layout_toRightOf="@id/tv_street"
                        android:textColorHint="#EAEAEA"
                        style="@style/personInfoEdit"
                        android:layout_centerVertical="true"
                        android:hint="你想对商家说的话"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>

                <View
                    android:background="@color/gray_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_0.5"/>


                <View
                    android:background="@color/gray_line"
                    android:layout_marginTop="@dimen/h_20"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_0.5"/>

                <RelativeLayout
                    android:paddingLeft="@dimen/w_10"
                    android:paddingRight="@dimen/w_10"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="@dimen/h_50">


                    <TextView
                        android:id="@+id/tv_default"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/personInfoText"
                        android:text="是否使用云豆抵扣"
                        />


                    <CheckBox
                        android:id="@+id/cb_is_default"
                        android:button="@null"
                        android:background="@drawable/checkbox_address_selector"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RelativeLayout>

                <View
                    android:background="@color/gray_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_0.5"/>


                <RelativeLayout
                    android:id="@+id/rl_pay_way"
                    android:background="@drawable/bg_base_selector"
                    android:paddingLeft="@dimen/w_10"
                    android:paddingRight="@dimen/w_10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_50">
                    <TextView
                        android:id="@+id/tv_pay_way"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/personInfoText"
                        android:text="选择支付方式"
                        />

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:src="@mipmap/ic_arrow_right"
                        android:layout_height="match_parent" />

                </RelativeLayout>
                <View
                    android:background="@color/gray_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_0.5"/>

            </LinearLayout>


        </ScrollView>
        <com.cloud.tao.ui.widget.LoadTipLayout
            android:id="@+id/loadding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tip_loadding_src="@mipmap/ic_loading"
            />

        <View
            android:id="@+id/v_masker"
            android:visibility="gone"
            android:background="#e0000000"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>


        <Button
            android:id="@+id/bt_buy_score"
            android:background="@android:color/holo_red_light"
            android:textColor="@color/white"
            android:textSize="@dimen/f16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_50"
            android:text="确定购买"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>



</LinearLayout>
