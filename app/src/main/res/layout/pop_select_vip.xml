<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/pop_layout"
    >


    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"


        android:layout_height="@dimen/h_40">
        <ImageView
            android:id="@+id/iv_close"
            android:src="@mipmap/details_close"
            android:paddingLeft="@dimen/w_10"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="请选择会员类型"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_ok"
            android:src="@mipmap/tick"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/w_10"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <View
            android:layout_alignParentBottom="true"
            android:background="@color/gray_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_0.5"/>

    </RelativeLayout>



    <LinearLayout

        android:layout_below="@id/rl_title"
        android:layout_marginTop="@dimen/h_30"
        android:layout_marginBottom="@dimen/h_30"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <RelativeLayout
            android:id="@+id/rl_vip1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_50">

            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/w_100"
                android:layout_height="match_parent">
            <TextView
                android:text="VIP 1"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:layout_centerVertical="true"
                android:button="@drawable/rbtn_sex_selector"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

                <View

                    android:layout_alignParentBottom="true"
                    android:background="@color/gray_line"
                    android:layout_width="@dimen/w_30"
                    android:layout_height="@dimen/h_0.5"/>
            </RelativeLayout>

        </RelativeLayout>






        <RelativeLayout
            android:id="@+id/rl_vip2"
            android:layout_above="@id/rl_vip1"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_50">

            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/w_100"
                android:layout_height="match_parent">
                <TextView
                    android:text="VIP 2"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:layout_centerVertical="true"
                    android:button="@drawable/rbtn_sex_selector"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <View
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray_line"
                    android:layout_width="@dimen/w_30"
                    android:layout_height="@dimen/h_0.5"/>
            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_above="@id/rl_vip2"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_50">

            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/w_100"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_vip1"
                    android:text="VIP 3"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:layout_centerVertical="true"
                    android:button="@drawable/rbtn_sex_selector"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </RelativeLayout>

        </RelativeLayout>




    </LinearLayout>
</RelativeLayout>
