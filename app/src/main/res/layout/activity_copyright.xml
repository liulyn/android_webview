<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gary_bg"
        >


        <com.cloud.tao.ui.widget.TitleBar
            android:id="@+id/tb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titlebar_height"
            android:layout_alignParentTop="true"
            android:background="@color/nag_bg"
            app:title_left_icon_src="@mipmap/ic_chevron_left"
            app:title_left_icon_visible="true"
            app:title_right_visible="true"
            app:title_text="关于我们"
            app:title_text_color="@android:color/white" />

        <LinearLayout
            android:background="@color/gary_bg"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/rl_top"
                android:gravity="center"
                android:layout_weight="5"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/app_ico"
                    />

                <TextView
                    android:id="@+id/tv_about_version"
                    android:textColor="#BEBEBE"
                    android:layout_marginTop="5dip"
                    android:text="云之道"
                    android:textSize="@dimen/f16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <LinearLayout
                android:layout_weight="1"
                android:layout_below="@id/rl_top"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_about_we_agreement"
                    android:layout_centerHorizontal="true"
                    android:text="使用条款和隐私政策"
                    android:textSize="@dimen/f18"
                    android:layout_width="wrap_content"
                    android:textColor="@color/nag_bg"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_centerHorizontal="true"
                    android:textColor="#BEBEBE"
                    android:layout_marginTop="5dip"
                    android:text="云之道（深圳）网络科技有限公司 版权所有"
                    android:textSize="@dimen/f16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_centerHorizontal="true"
                    android:textColor="#BEBEBE"
                    android:layout_marginTop="5dip"
                    android:text="copyright©2017"
                    android:textSize="@dimen/f16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_centerHorizontal="true"
                    android:textColor="#BEBEBE"
                    android:layout_below="@id/iv_icon"
                    android:text="All Rights Reserved"
                    android:textSize="@dimen/f16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>





            </LinearLayout>
        </LinearLayout>
    </layout>
