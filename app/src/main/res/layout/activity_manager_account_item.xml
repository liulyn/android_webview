<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/h_60">

    <RadioButton
        android:id="@+id/rb_select_account"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/w_15"
        android:background="@drawable/rbtn_sex_selector_on"
        android:button="@null"
        android:layout_marginRight="@dimen/w_15"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/ll_select_account"
        android:layout_toRightOf="@id/rb_select_account"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_account_username"
            android:text=""
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/h_5"
            android:id="@+id/tv_account_number"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_del_account"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/w_15"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:src="@mipmap/del_card"
        android:layout_height="match_parent" />


</RelativeLayout>
