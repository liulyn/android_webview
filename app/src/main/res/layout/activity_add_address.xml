<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gary_bg"
        >


        <com.cloud.tao.ui.widget.TitleBar
            android:id="@+id/tb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titlebar_height"
            android:layout_alignParentTop="true"
            android:background="@color/nag_bg"
            app:title_left_icon_src="@mipmap/ic_chevron_left"
            app:title_left_icon_visible="true"
            app:title_right_visible="true"
            app:title_text="新增收货地址"
            app:title_text_color="@android:color/white" />

        <RelativeLayout
            android:background="@color/gary_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                        <LinearLayout
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">






                            <View
                                android:background="@color/gray_line"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_0.5"/>



                            <RelativeLayout
                                android:layout_marginLeft="@dimen/w_20"
                                android:layout_marginRight="@dimen/w_20"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_50">
                                <TextView
                                    android:id="@+id/tv_consignee"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/personInfoText"
                                    android:text="@string/add_address_consignee"
                                    />

                                <EditText
                                    android:id="@+id/et_consignee"
                                    android:layout_marginLeft="@dimen/w_5"
                                    android:textColorHint="#EAEAEA"
                                    style="@style/personInfoEdit"
                                    android:layout_toRightOf="@+id/tv_consignee"
                                    android:layout_centerVertical="true"
                                    android:inputType="text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                            </RelativeLayout>

                            <View
                                android:background="@color/gray_line"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_0.5"/>


                            <RelativeLayout
                                android:id="@+id/rl_cash_way"
                                android:layout_marginLeft="@dimen/w_20"
                                android:layout_marginRight="@dimen/w_20"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_50">
                                <TextView
                                    android:id="@+id/tv_phone"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/personInfoText"
                                    android:text="@string/add_address_phone"
                                    />
                                <EditText
                                    android:id="@+id/et_phone"
                                    android:layout_marginLeft="@dimen/w_5"
                                    android:textColorHint="#EAEAEA"
                                    style="@style/personInfoEdit"
                                    android:layout_toRightOf="@+id/tv_phone"
                                    android:layout_centerVertical="true"
                                    android:inputType="text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                            </RelativeLayout>

                            <View
                                android:background="@color/gray_line"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_0.5"/>


                            <RelativeLayout
                                android:id="@+id/rl_city"
                                android:paddingLeft="@dimen/w_20"
                                android:paddingRight="@dimen/w_20"
                                android:layout_width="match_parent"
                                android:background="@drawable/bg_base_selector"
                                android:layout_height="@dimen/h_50">
                                <TextView
                                    android:id="@+id/tv_city"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/personInfoText"
                                    android:text="@string/add_address_city"
                                    />

                                <TextView
                                    android:id="@+id/tv_select_city"
                                    android:layout_marginLeft="@dimen/w_5"
                                    style="@style/personInfoEdit"
                                    android:layout_toRightOf="@+id/tv_city"
                                    android:layout_centerVertical="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <ImageView
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_width="wrap_content"
                                    android:src="@mipmap/ic_arrow_right"
                                    android:layout_height="match_parent" />

                            </RelativeLayout>

                            <View
                                android:background="@color/gray_line"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_0.5"/>

                            <RelativeLayout
                                android:layout_marginLeft="@dimen/w_20"
                                android:layout_marginRight="@dimen/w_20"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_50">
                                <TextView
                                    android:id="@+id/tv_street"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/personInfoText"
                                    android:text="@string/add_address_street"
                                    />

                                <EditText
                                    android:id="@+id/et_street"
                                    android:layout_marginLeft="@dimen/w_5"
                                    android:textColorHint="#EAEAEA"
                                    style="@style/personInfoEdit"
                                    android:layout_toRightOf="@+id/tv_street"
                                    android:layout_centerVertical="true"
                                    android:hint="@string/add_address_street_hint"
                                    android:inputType="text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                            </RelativeLayout>

                            <View
                                android:background="@color/gray_line"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_0.5"/>


                            <View
                                android:background="@color/gray_line"
                                android:layout_marginTop="@dimen/h_20"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_0.5"/>

                            <RelativeLayout
                                android:layout_marginLeft="@dimen/w_20"
                                android:layout_marginRight="@dimen/w_20"

                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_50">


                                <TextView
                                    android:id="@+id/tv_default"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/personInfoText"
                                    android:text="@string/add_address_setting_default"
                                    />


                                <CheckBox
                                    android:id="@+id/cb_is_default"
                                    android:button="@null"
                                    android:background="@drawable/checkbox_address_selector"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true"
                                    android:scaleX="0.6"
                                    android:scaleY="0.6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />


                            </RelativeLayout>

                            <View
                                android:background="@color/gray_line"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_0.5"/>



                    </LinearLayout>


            <Button
                android:layout_alignParentBottom="true"
                android:id="@+id/bt_save_address"
                android:background="@drawable/selector_square_bt"
                android:textColor="@color/white"
                android:textSize="@dimen/f16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/h_50"
                android:text="保存地址"
                />

            <View
                android:id="@+id/vMasker"
                android:visibility="gone"
                android:background="#e0000000"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>

            <com.cloud.tao.ui.widget.LoadTipLayout
                android:id="@+id/loadding"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:tip_loadding_src="@mipmap/ic_loading"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="35dp" />


        </RelativeLayout>

    </LinearLayout>
</layout>