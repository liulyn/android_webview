<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/h_80">
    <View
        android:layout_alignParentTop="true"
        android:background="@color/gray_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_0.5"/>

    <RelativeLayout
        android:id="@+id/ll_base_info"
        android:layout_marginLeft="@dimen/w_10"
        android:layout_marginRight="@dimen/w_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_50">
    <LinearLayout
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_username"
            android:text=""
            style="@style/cashHistoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/tv_number"
            android:text=""
            style="@style/cashHistoryOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_cash"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_integral"
            android:text=""
            style="@style/cashHistoryCash"
            android:layout_marginTop="@dimen/h_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_cash"
            android:text=""
            style="@style/cashHistoryCash"
            android:layout_marginTop="@dimen/h_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_below="@id/ll_base_info"
        android:background="@color/gray_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_0.5"/>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/w_10"
        android:layout_marginRight="@dimen/w_10"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/h_30">

        <TextView
            android:id="@+id/tv_date"
            android:text=""
            style="@style/cashHistoryOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv_status"
            android:text=""
            style="@style/cashHistoryCash"
            android:textColor="@color/red_gift_num"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/w_80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_alignParentBottom="true"
        android:background="@color/gray_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_0.5"/>
</RelativeLayout>
