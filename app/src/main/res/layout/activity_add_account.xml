<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gary_bg"
        >


        <com.cloud.tao.ui.widget.TitleBar
            android:id="@+id/tb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titlebar_height"
            android:layout_alignParentTop="true"
            android:background="@color/nag_bg"
            app:title_left_icon_src="@mipmap/ic_chevron_left"
            app:title_left_icon_visible="true"
            app:title_right_visible="true"
            app:title_text="添加账号"
            app:title_text_color="@android:color/white" />




        <RelativeLayout
            android:background="@color/gary_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                        <LinearLayout
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">






                            <View
                                android:background="@color/gray_line"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_0.5"/>



                            <RelativeLayout
                                android:layout_marginLeft="@dimen/w_20"
                                android:layout_marginRight="@dimen/w_20"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_50">
                                <TextView
                                    android:id="@+id/tv_payee"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/personInfoText"
                                    android:text="@string/add_account_tv_payee"
                                    />

                                <EditText
                                    android:id="@+id/et_payee"
                                    android:layout_marginLeft="@dimen/w_5"
                                    android:textColorHint="#EAEAEA"
                                    style="@style/personInfoEdit"
                                    android:layout_toRightOf="@+id/tv_payee"
                                    android:layout_centerVertical="true"
                                    android:inputType="text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                            </RelativeLayout>

                            <View
                                android:background="@color/gray_line"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_0.5"/>


                            <RelativeLayout
                                android:id="@+id/rl_cash_way"
                                android:layout_marginLeft="@dimen/w_20"
                                android:layout_marginRight="@dimen/w_20"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_50">
                                <TextView
                                    android:id="@+id/tv_pay_way"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/personInfoText"
                                    android:text="@string/add_account_tv_way"
                                    />

                                <ImageView
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_width="wrap_content"
                                    android:src="@mipmap/ic_arrow_right"
                                    android:layout_height="match_parent" />

                            </RelativeLayout>

                            <View
                                android:background="@color/gray_line"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_0.5"/>


                            <RelativeLayout
                                android:layout_marginLeft="@dimen/w_20"
                                android:layout_marginRight="@dimen/w_20"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_50">
                                <TextView
                                    android:id="@+id/tv_account"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/personInfoText"
                                    android:text="@string/add_account_tv_account"
                                    />

                                <EditText
                                    android:id="@+id/et_account"
                                    android:layout_marginLeft="@dimen/w_5"
                                    android:textColorHint="#EAEAEA"
                                    style="@style/personInfoEdit"
                                    android:layout_toRightOf="@+id/tv_account"
                                    android:layout_centerVertical="true"
                                    android:inputType="text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                            </RelativeLayout>

                            <View
                                android:background="@color/gray_line"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_0.5"/>


                            <RelativeLayout
                                android:layout_marginLeft="@dimen/w_20"
                                android:layout_marginRight="@dimen/w_20"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_50">
                                <TextView
                                    android:id="@+id/tv_again_account"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/personInfoText"
                                    android:text="@string/add_account_tv_confirm_account"
                                    />

                                <EditText
                                    android:id="@+id/et_again_account"
                                    android:layout_marginLeft="@dimen/w_5"
                                    android:textColorHint="#EAEAEA"
                                    style="@style/personInfoEdit"
                                    android:layout_toRightOf="@+id/tv_again_account"
                                    android:layout_centerVertical="true"
                                    android:inputType="text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                            </RelativeLayout>



                            <View
                                android:background="@color/gray_line"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_0.5"/>

                            <RelativeLayout
                                android:id="@+id/rl_open_bank_way"
                                android:background="@drawable/bg_base_selector"
                                android:paddingLeft="@dimen/w_20"
                                android:paddingRight="@dimen/w_20"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_50">
                                <TextView
                                    android:id="@+id/tv_open_bank_way"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/personInfoText"
                                    android:text="选择银行名称:"
                                    />


                                <ImageView
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_width="wrap_content"
                                    android:src="@mipmap/ic_arrow_right"
                                    android:layout_height="match_parent" />

                            </RelativeLayout>



                            <View
                                android:background="@color/gray_line"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_0.5"/>

                            <RelativeLayout
                                android:id="@+id/rl_open_city"
                                android:visibility="gone"
                                android:background="@drawable/bg_base_selector"
                                android:paddingLeft="@dimen/w_20"
                                android:paddingRight="@dimen/w_20"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_50">
                                <TextView
                                    android:id="@+id/tv_open_city"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/personInfoText"
                                    android:text="选择开户城市:"
                                    />


                                <ImageView
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_width="wrap_content"
                                    android:src="@mipmap/ic_arrow_right"
                                    android:layout_height="match_parent" />

                            </RelativeLayout>









                            <View
                                android:background="@color/gray_line"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_0.5"/>




                            <RelativeLayout
                                android:id="@+id/rl_open_bank"
                                android:visibility="gone"
                                android:layout_marginLeft="@dimen/w_20"
                                android:layout_marginRight="@dimen/w_20"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_50">
                                <TextView
                                    android:id="@+id/tv_open_bank"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/personInfoText"
                                    android:text="@string/add_account_tv_open_bank"
                                    />

                                <EditText
                                    android:id="@+id/et_open_bank"
                                    android:layout_marginLeft="@dimen/w_5"
                                    android:textColorHint="#EAEAEA"
                                    style="@style/personInfoEdit"
                                    android:layout_toRightOf="@+id/tv_open_bank"
                                    android:layout_centerVertical="true"
                                    android:inputType="text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                            </RelativeLayout>

                            <View
                                android:background="@color/gray_line"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_0.5"/>





                            <RelativeLayout
                                android:layout_marginLeft="@dimen/w_20"
                                android:layout_marginRight="@dimen/w_20"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_50">


                                <TextView
                                    android:id="@+id/tv_default"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/personInfoText"
                                    android:text="设为默认账号"
                                    />


                                <CheckBox
                                    android:id="@+id/cb_is_default"
                                    android:button="@null"
                                    android:checked="true"
                                    android:background="@drawable/checkbox_address_selector"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true"
                                    android:scaleX="0.6"
                                    android:scaleY="0.6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />


                            </RelativeLayout>

                            <View
                                android:background="@color/gray_line"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_0.5"/>


                    </LinearLayout>


            <com.cloud.tao.ui.widget.LoadTipLayout
                android:id="@+id/loadding"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:tip_loadding_src="@mipmap/ic_loading"
                />

            <View
                android:id="@+id/vMasker"
                android:visibility="gone"
                android:background="#e0000000"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>


            <Button
                android:id="@+id/bt_add_account"
                android:background="@drawable/selector_square_bt"
                android:textColor="@color/white"
                android:textSize="@dimen/f16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/h_50"
                android:text="确认添加"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

    </LinearLayout>
</layout>