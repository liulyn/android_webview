<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@mipmap/ic_coin_more"
              android:orientation="vertical"
              android:padding="@dimen/content_padding">

    <TextView
        android:id="@+id/tv_charger_detail"
        style="@style/TextView.14sp_White"
        android:drawableLeft="@mipmap/ic_coin_more_item"
        android:drawablePadding="@dimen/global_padding"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:text="@string/charger_detail"
        />

    <View
        style="@style/View.line_width"
        android:background="@color/colorPrimaryDark"
        />

    <TextView
        android:id="@+id/tv_consumer_detail"
        style="@style/TextView.14sp_White"
        android:drawableLeft="@mipmap/ic_coin_more_item"
        android:drawablePadding="@dimen/global_padding"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:text="@string/consum_detail"
        />
</LinearLayout>