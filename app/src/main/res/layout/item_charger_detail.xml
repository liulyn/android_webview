<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_mouth"
        style="@style/TextView.Alpha70_14sp_Black"
        android:layout_width="match_parent"
        android:padding="@dimen/global_padding"
        android:background="@color/bg_gray_text"
        android:text="8月"  />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/global_padding"
        >
        <TextView
            android:id="@+id/tv_time"
            style="@style/TextView.Alpha50_14sp_Black"
            android:text="07-17 11:00"  />

        <TextView
            android:id="@+id/tv_game_name"
            style="@style/TextView.Alpha70_14sp_Black"
            android:layout_marginLeft="@dimen/w_50"
            android:padding="@dimen/global_padding"
            android:text="传奇网页"  />

        <TextView
            android:id="@+id/tv_get_coin"
            style="@style/TextView.Alpha70_14sp_Black"
            android:layout_width="match_parent"
            android:gravity="right"
            android:padding="@dimen/global_padding"
            android:text="奖励900金币 "  />
    </LinearLayout>
</LinearLayout>