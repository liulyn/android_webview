<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_gray_bg"
        android:orientation="vertical">

    <com.cloud.tao.ui.widget.TitleBar
        android:id="@+id/tb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/nag_bg"
        app:title_left_icon_visible="true"
        app:title_right_visible="true"
        app:title_left_icon_src="@mipmap/ic_chevron_left"
        android:layout_alignParentTop="true"
        app:title_text="创业申请"
        app:title_text_color="@android:color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tb"
            android:background="@color/color_white_bg">
            <LinearLayout
                android:id="@+id/ll_apply_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="创业特权"
                    android:layout_margin="@dimen/w_12"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text_gray_01"
                    android:textSize="@dimen/f16"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_0.5"
                    android:background="@color/item_line"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_apply_shop_hint"
                android:layout_below="@id/ll_apply_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/w_52"
                    android:layout_height="@dimen/h_36"
                    android:layout_margin="@dimen/w_18"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_sales_center_group"
                    />
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray_01"
                        android:textSize="@dimen/f14"
                        android:text="独立微店"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/h_4"
                        android:textColor="@color/text_gray_02"
                        android:textSize="@dimen/f12"
                        android:text="独立拥有自己的微店及推广二维码"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_apply_commission_hint"
                android:layout_below="@id/ll_apply_shop_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/w_52"
                    android:layout_height="@dimen/h_36"
                    android:layout_margin="@dimen/w_18"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_sales_center_commission"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray_01"
                        android:textSize="@dimen/f14"
                        android:text="销售拿佣金"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/h_4"
                        android:textColor="@color/text_gray_02"
                        android:textSize="@dimen/f12"
                        android:text="微店卖出商品，你可以获得佣金"
                        />
                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/v_apply_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/h_0.5"
                android:layout_below="@id/ll_apply_commission_hint"
                android:background="@color/item_line"/>

            <TextView
                android:id="@+id/tv_apply_other_hint"
                android:layout_below="@id/v_apply_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray_02"
                android:layout_marginTop="@dimen/w_12"
                android:layout_marginRight="@dimen/w_12"
                android:layout_marginBottom="@dimen/w_12"
                android:layout_marginLeft="@dimen/w_24"
                android:textSize="@dimen/f14"
                android:text="创业的商品销售统一由厂家直接收款，直接发货，并提供商品的售后服务，创业佣金由厂家统一设置。"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/bt_fenxiao_apply"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_52"
            android:textColor="@color/color_white_bg"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/f16"
            android:text="我要创业"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_square_bt"
            />

    </RelativeLayout>
</layout>