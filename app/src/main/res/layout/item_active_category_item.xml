<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/h_6">

        <ImageView
            android:id="@+id/iv_active_category_ico"
            android:layout_height="@dimen/w_60"
            android:layout_width="@dimen/w_60"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/iv_active_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h_2"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/text_gray_01"
            android:textSize="@dimen/f12" />
    </LinearLayout>
</FrameLayout>