<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/w_12"
        android:paddingRight="@dimen/w_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/h_6"
            android:text="@string/login_hint"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/f16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h_16"
            android:orientation="vertical"
            android:paddingLeft="@dimen/w_12"
            android:paddingRight="@dimen/w_12">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_login_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/h_8"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_account"
                    style="@style/EditText.Login"
                    android:drawableLeft="@mipmap/ic_account"
                    android:hint="@string/login_account_hint" />

                <EditText
                    android:id="@+id/et_pwd"
                    style="@style/EditText.Login"
                    android:layout_marginTop="@dimen/h_12"
                    android:drawableLeft="@mipmap/ic_pwd"
                    android:hint="@string/login_password_hint"
                    android:inputType="textPassword" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h_16">

                <!--<TextView
                    android:id="@+id/tv_mobile_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/mobile_phone_register"
                    android:textColor="@color/text_gray_02"
                    android:textSize="@dimen/f16" />-->

                <TextView
                    android:id="@+id/tv_forget_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/forget_password"
                    android:textColor="@color/text_gray_01"
                    android:textSize="@dimen/f16" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h_20"
            android:orientation="vertical"
            android:paddingLeft="@dimen/w_24"
            android:paddingRight="@dimen/w_24">

            <Button
                android:id="@+id/bt_login_account"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/selector_round_big_rectangle_bt"
                android:enabled="false"
                android:text="@string/login_hint"
                android:textColor="@color/color_white_bg"
                android:textSize="@dimen/f16" />

            <Button
                android:id="@+id/bt_login_register"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/h_20"
                android:background="@drawable/selector_login_round_line_bt"
                android:text="@string/register_hint"
                android:textColor="@color/tv_login_line_selector"
                android:textSize="@dimen/f16" />

        </LinearLayout>


