<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_view"
    android:background="@drawable/shape_bank_card_bg1"
    android:layout_width="match_parent"
    android:layout_height="@dimen/h_80">



    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/w_15"
        android:layout_marginTop="@dimen/h_10"
        android:layout_marginBottom="@dimen/h_10"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_alignParentTop="true"
            android:text="车卡"
            android:textSize="@dimen/f14"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_bank_number"
            android:text="123456789123456"
            android:textColor="@color/white"
            android:textSize="@dimen/f14"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_del"
        android:src="@mipmap/del_card"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/w_15"
        android:layout_marginTop="@dimen/w_15"
        android:layout_width="15dp"
        android:layout_height="15dp" />

</RelativeLayout>
