<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/h_70">



    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:paddingLeft="@dimen/w_10"
        android:layout_marginTop="@dimen/h_10"
        android:layout_alignBottom="@dimen/h_10"
        android:layout_centerVertical="true"
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_date"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/f14"
            android:textColor="#313131"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_username"
                android:text=""
                android:layout_weight="1"
                android:textSize="@dimen/f14"
                android:layout_marginTop="@dimen/h_5"
                android:textColor="#313131"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_buy_money"
                android:text=""
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="@dimen/f14"
                android:textColor="@color/red_gift_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/w_10"
        android:layout_marginTop="@dimen/h_10"
        android:layout_alignBottom="@dimen/h_10"
        android:gravity="right"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_state"
            android:text=""
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="@dimen/f14"
            android:textColor="#313131"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="查看"
            android:id="@+id/bt_show_detail"
            android:layout_weight="1"
            android:textSize="@dimen/f14"
            android:textColor="@color/red_gift_num"
            android:layout_width="@dimen/w_60"
            android:layout_height="@dimen/h_30" />

    </LinearLayout>



</RelativeLayout>
