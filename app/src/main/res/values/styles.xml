<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item> <!-- 主色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> <!-- 状态栏的颜色 -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:launchMode">singleTop</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <!--沉浸式-->
    <style name="MyBaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--启动主题-->
    <style name="Theme.Start" parent="MyBaseAppTheme" >
        <item name="android:windowBackground">@mipmap/ic_splash_icon</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="View"></style>

    <style name="Global_Content_Padding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/content_padding</item>
        <item name="android:paddingRight">@dimen/content_padding</item>
    </style>

    <style name="View.line_width">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
         <item name="android:background">@color/gray_line</item>
    </style>

    <style name="TextView"></style>

    <style name="TextView.14sp_Common">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/f14</item>
    </style>

    <style name="TextView.14sp_White">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/f14</item>
    </style>

    <style name="TextView.14sp_Common.Bg">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">@dimen/global_padding</item>
    </style>

    <style name="TextView.Gray_Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/content_padding</item>
        <item name="android:textSize">@dimen/f14</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/global_padding</item>
        <item name="android:drawableRight">@mipmap/ic_arrow_right_gray</item>
    </style>

    <style name="TextView.Oranga_12sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/global_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/orange</item>
    </style>


    <style name="TextView.Alpha80_16sp_Black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/f16</item>
    </style>

    <style name="TextView.Alpha80_14sp_Black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/f14</item>
    </style>

    <style name="TextView.Alpha80_12sp_Black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/f12</item>
    </style>

    <style name="TextView.Alpha70_14sp_Black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.7</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/f14</item>
    </style>

    <style name="TextView.Alpha60_10sp_Black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.6</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/f10</item>
    </style>

    <style name="TextView.Alpha60_12sp_Black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.6</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/f12</item>
    </style>

    <style name="TextView.Alpha60_14sp_Black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.6</item>
        <item name="android:textColor">#CEC0CB</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/f16</item>
    </style>

    <style name="TextView.Alpha50_14sp_Black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.5</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/f14</item>
    </style>

    <style name="TextView.Alpha60_16sp_Black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.6</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/f16</item>
    </style>

    <style name="EditText"></style>

    <!--搜索框样式-->
    <style name="StyleSearchEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/text_gray_01</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditText.Content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">top|left</item>
        <item name="android:padding">@dimen/global_padding</item>
    </style>

    <style name="EditText.White">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">@dimen/content_padding</item>
        <item name="android:textColor">@color/gray_text</item>
    </style>


    <style name="EditText.Login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/w_50</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:drawableBottom">@drawable/et_comment_login_conner</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">@dimen/f14</item>
        <item name="android:drawablePadding">@dimen/global_padding</item>
    </style>


    <style name="Button"></style>

    <style name="Button.Comment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/global_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/btn_comment_5dp_solid_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ImageView"></style>

    <style name="ImageView.Comment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="customDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="rg_btn_style">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/tv_tab_selector</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:drawablePadding">2dip</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="rg_btn_pressed_style">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/tv_tab_pressed_selector</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:drawablePadding">2dip</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="dialogWindowAnim" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">100dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <declare-styleable name="SwipeRefreshView">
        <attr name="scrollableChildId" format="reference" />
    </declare-styleable>

    <declare-styleable name="RefreshLoadMoreView">
        <attr name="defaultDivider" format="boolean" />
    </declare-styleable>
    
    
    
    
    <style name="personInfoEdit">
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/f14</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
    </style>
    <style name="bankcardInfoEdit">
        <item name="android:paddingLeft">5dip</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/f14</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">#D2D2D2</item>
    </style>

    <style name="personInfoEditText">
        <item name="android:textColor">#EAEAEA</item>
        <item name="android:textSize">@dimen/f14</item>
    </style>

    <style name="personInfoText">
        <item name="android:textColor">#313131</item>
        <item name="android:textSize">@dimen/f14</item>
    </style>
    <style name="cashHistoryTitle">
        <item name="android:textColor">#1F1F1F</item>
        <item name="android:textSize">@dimen/f14</item>
    </style>
    <style name="cashHistoryCash">
        <item name="android:textColor">#1F1F1F</item>
        <item name="android:textSize">@dimen/f14</item>
    </style>
    <style name="cashHistoryOther">
        <item name="android:textColor">#8B8B8B</item>
        <item name="android:textSize">@dimen/f14</item>
    </style>

    <style name="GoodsAttrDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="ActiviyDialogStyle">
        <item name="android:windowFrame">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">

        <item name="android:button">@drawable/checkbox_address_selector</item>
        <item name="android:paddingLeft">50.0dip</item>
        <item name="android:maxHeight">30.0dip</item>

    </style>


</resources>
